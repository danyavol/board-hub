{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./",
        "strict": true,
        // "noImplicitAny": false,
        // "strictNullChecks": false,
        "paths": {
            "@services/*": ["src/services/*"],
            "@constants/*": ["src/constants/*"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}